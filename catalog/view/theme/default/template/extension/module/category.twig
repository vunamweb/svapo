<div class="list-group">
  {% for category in categories %}
  {% if category.category_id == category_id %} 
  <h4 class="title text1 text-black font_Inter mb-lg-4 mb-2 active">{{ category.name }}</h4>
  {% if category.children %}
  {% for child in category.children %}
  {% if child.category_id == child_id %}
  <a href="{{ child.href }}" class="list-group-item active">{{ child.name }}</a> 
  {% else %} 
  <a href="{{ child.href }}" class="list-group-item">{{ child.name }}</a>
  {% endif %}
  {% endfor %}
  {% endif %}
  {% else %} <h4 class="title text1 text-black font_Inter mb-lg-4 mb-2">{{ category.name }}</h4>
  {% endif %}
  {% endfor %}
</div>
