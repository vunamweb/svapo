		<link href="catalog/view/theme/default/stylesheet/style.css?v={{ randomNumber }}" rel="stylesheet"/>
		<script src="catalog/view/javascript/jquery/jquery.2.2.4.min.js"></script>		
		{% for style in styles %}
			<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
		{% endfor %}
		{% for script in scripts %}
			<script src="{{ script }}" type="text/javascript"></script>
		{% endfor %}
		{% for link in links %}
			<link href="{{ link.href }}" rel="{{ link.rel }}"/>
		{% endfor %}
		{% for analytic in analytics %}
			{{ analytic }}
		{% endfor %}
		<!-- Matomo -->
		<script>
		  var _paq = window._paq = window._paq || [];
		  /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
		  _paq.push(["setDoNotTrack", true]);
		  _paq.push(["disableCookies"]);
		  _paq.push(['trackPageView']);
		  _paq.push(['enableLinkTracking']);
		  (function() {
			var u="//www.svapo.de/matomo/";
			_paq.push(['setTrackerUrl', u+'matomo.php']);
			_paq.push(['setSiteId', '1']);
			var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
			g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
		  })();
		</script>
		<!-- End Matomo Code -->

	</head>
	<body>
		<a class="visually-hidden-focusable" href="#main-content">Zum Inhalt springen</a>
		
		<header role="banner">
			<button class="btn btn-kontrast c1 contrast-toggle" aria-pressed="true">
			<img src="./images/barrierefreiheit-w.png" alt="Barrierefreiheit - Hoher Kontrast" class="Barrierefreiheit">
			<span class="visually-hidden">Kontrast und Barrierefreiheit umschalten</span>
			</button>
		</header>
		
		<nav class="navbar navbar-expand-lg">
			<div class="container">
				<a class="navbar-brand" href="./"">
					<img class="logo" src="./images/Logo-SVAPO.svg" alt="{{ name }}">
				</a>
		
				<!-- Toggle-Button für Mobile Ansicht -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsMain"
						aria-controls="navbarsMain" aria-expanded="false" aria-label="Menü umschalten">
					<span class="navbar-toggler-icon"></span>
				</button>
		
				<!-- Menü (rechts) -->
				<div class="collapse navbar-collapse justify-content-end" id="navbarsMain">
					<ul class="navbar-nav">
						<li class="nav-item kontrast-off">
							<a class="nav-link" href="./" accesskey="1">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="./shop" accesskey="4">Livebestand</a>
						</li>
						{% if logged %}
							<li class="nav-item">
								<a class="nav-link" href="./index.php?route=account/account" accesskey="2">{{ menu_account }}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="./vorbestellen">{{ add_order }}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="./logout">{{ menu_logout }}</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="./login" accesskey="2">{{ menu_login }}</a>
							</li>
							<li class="nav-item kontrast-off">
								<a class="nav-link" href="./login">{{ add_order }}</a>
							</li>
							<li class="nav-item hide">
								<a class="nav-link" href="./register">{{ menu_register }}</a>
							</li>
						{% endif %}
						
						{{ menu_morpheus }}

						{% if logged == false %}
							<li class="nav-item hide">
								<a class="nav-link" href="./password">{{ password }}</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>	
		
